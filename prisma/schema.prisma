// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@localhost:5432"
}

model User {
  id         Int     @id @default(autoincrement())
  name       String
  bio        String
  email      String
  address    String
  isVerified Boolean
}

model ProfilePicture {
  id      Int    @id @default(autoincrement())
  userId  Int    @unique
  format  String
  version String
}

model BannerPicture {
  id      Int    @id @default(autoincrement())
  userId  Int    @unique
  format  String
  version String
}
